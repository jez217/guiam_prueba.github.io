    <script>
        $(document).ready(function () {
            // Función para verificar y mostrar/ocultar campos
            function toggleCursoNivel() {
                var selectedRol = $('#IdRol').val(); // Obtiene el valor seleccionado de IdRol

                if (selectedRol == '3') {
                    $('#cursoNivelSection').show(); // Muestra el div que contiene Curso y Nivel
                    $('#IdCurso').prop('disabled', false); // Habilita el DropDownList de IdCurso
                    $('#IdLevel').prop('disabled', false); // Habilita el DropDownList de IdLevel
                    $('#nivelField').show(); // Asegúrate de mostrar el campo de Nivel
                } else if (selectedRol == '2') {
                    $('#cursoNivelSection').show(); // Muestra el div que contiene Curso
                    $('#IdCurso').prop('disabled', false); // Habilita el DropDownList de IdCurso
                    $('#IdLevel').prop('disabled', true); // Desactiva el DropDownList de IdLevel
                    $('#nivelField').hide(); // Asegúrate de ocultar el campo de Nivel
                } else {
                    $('#cursoNivelSection').hide(); // Oculta el div que contiene Curso y Nivel
                    $('#IdCurso').prop('disabled', true); // Desactiva el DropDownList de IdCurso
                    $('#IdLevel').prop('disabled', true); // Desactiva el DropDownList de IdLevel
                    $('#nivelField').hide(); // Asegúrate de ocultar el campo de Nivel
                }
            }

            // Llama a la función cuando se carga la página
            toggleCursoNivel();

            // Llama a la función cuando cambia el valor de IdRol
            $('#IdRol').change(function () {
                toggleCursoNivel();
            });
        });
    </script>




    <script>
        function confirmUserDeleted(id) {
            Swal.fire({
                title: '¿Estás seguro?',
                text: "¡No podrás revertir esto!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, eliminar!',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    deleteUser(id);
                }
            });
        }

        function deleteUser(id) {
            $.ajax({
                url: '@Url.Action("DeleteUserConfirmed", "Admin")',
                type: 'POST',
                data: { userId: id },  // Asegúrate de que el nombre del parámetro coincida
                success: function (response) {
                    if (response.code === "success") {
                        Swal.fire(
                            '¡Eliminado!',
                            response.message,
                            'success'
                        ).then(() => {
                            location.reload();  // Recargar la página después de la eliminación exitosa
                        });
                    } else {
                        Swal.fire(
                            'Error',
                            response.message,
                            'error'
                        );
                    }
                },
                error: function (xhr, status, error) {
                    Swal.fire(
                        'Error',
                        'Hubo un error al eliminar el usuario.',
                        'error'
                    );
                }
            });
        }
    </script>

