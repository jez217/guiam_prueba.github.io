@model List<Pautas.Models.Profesor.Folder>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Gestión de Carpetas y Archivos</title>
</head>
<body>
    <div class="container mt-4">
        <h2>Carpetas</h2>
    </div>

    <div class="row justify-content-center text-center">
        @foreach (var folder in Model)
        {
            <div class="col-xl-4 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <a class="pl-3 pr-3" href="@Url.Action("View", "Student", new { id = folder.Id })">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="font-weight-bold text-primary text-uppercase mb-1">
                                        @folder.Name
                                    </div>
                                </div>
                                <div class="col">
                                    <i class="bi bi-folder-fill display-4"></i>
                                </div>
                                <div class="col-4">
                                    <i class="bi-three-dots-vertical" style="font-size:45px"></i>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</body>
</html>
